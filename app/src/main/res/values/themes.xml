<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoexFilm" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_moexfilm</item>
        <item name="colorPrimaryVariant">@color/accent_moexfilm</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_moexfilm</item>
        <item name="colorSecondaryVariant">@color/accent_moexfilm</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_moexfilm</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/red_hat_display_medium</item>
</style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="buttonMoexfilm" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/accent_moexfilm</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/red_hat_display_medium</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Widget.TextInputLayout.Moexfilm" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/accent_moexfilm</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

</resources>